<div class="navbar-wagon">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <p class="logo-text">Lets Learn</p>
    <p class="logo-text-tagline"> Something New</p>
  <% end %>
<div class="navbar-wagon-right hidden-xs hidden-sm">
<% if logged_in? %>
  <%= link_to "Become a teacher", new_skill_path, class: "navbar-wagon-item navbar-wagon-link" %>
  <%= link_to "Messages", messages_path, class: "navbar-wagon-item navbar-wagon-link" %>
  <div class="navbar-wagon-item">
    <div class="dropdown">
      <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to skills_path do %>
          <i class="fa fa-home"></i>  <%= t(".profile", default: "Find a teacher") %>
          <% end %>
        </li>
        <li>
         <%= link_to profile_path(current_user) do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
        <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% else %>
  <%= link_to t(".sign_in", default: "Login | Sign up"), new_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
<% end %>
</div>
<div class="navbar-wagon-item hidden-md hidden-lg">
<div class="dropdown">
  <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
  <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
  <% if logged_in? %>
    <li>
      <%= link_to skills_path do %>
        <i class="fa fa-home"></i>  <%= t(".profile", default: "Find a teacher") %>
      <% end %>
    </li>
    <li>
      <%= link_to new_skill_path do %>
        <i class="fa fa-graduation-cap"></i>  <%= t(".profile", default: "Become a teacher") %>
      <% end %>
    </li>
    <li>
     <%= link_to profile_path(current_user) do %>
        <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
      <% end %>
    </li>
    <li>
     <%= link_to messages_path do %>
        <i class="fa fa-envelope"></i>  <%= t(".profile", default: "Messages") %>
      <% end %>
    </li>
    <li>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
      <% end %>
    </li>
  </ul>
   <% else %>
  <%= link_to t(".sign_in", default: "Login | Sign up"), new_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
<% end %>
</div>
</div>
</div>
