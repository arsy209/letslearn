<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-3 col-lg-6">
      <div class="form-login">
        <div class="user-header">
          <h2>Register</h2>
        </div>
          <div class="new-user-form">
            <%= simple_form_for @user do |f| %>
            <div class="form-inputs">
              <%= f.input :first_name, required: true, placeholder: "First Name"%>
              <%= f.input :last_name, required: true, placeholder: "Second Name" %>
              <%= f.input :email, required: true, autofocus: true, placeholder: "Email" %>
              <%= f.input :bio ,:input_html => {:rows => 6,:style =>"resize:none"}, placeholder: "Biography"%>
              <%= f.input :password, required: true, placeholder: " Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :avatar, as: :file %>
              <%= f.input :role, as: :hidden, input_html: { value: params[:role] } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
